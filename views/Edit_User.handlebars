<body>
    <div class="master-container">
        <h1>Modifica conta</h1>
        <form class="form-container" action="/modUser/{{idUser}}" method="post">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" name="nome" value="{{ResultadoUsers.nome}}">
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="text" class="form-control" id="email" name="email" value="{{ResultadoUsers.email}}">
            </div>
            <div class="form-group">
                <label for="cargo">Cargo:<br><br>
                    0 - admin
                    1 - Usu√°rio
                </label>
                <input type="text" class="form-control" id="cargo" name="cargo" value="{{ResultadoUsers.cargo}}">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
        <a href="/users"><button type="submit" class="btn btn-primary" style="margin-top: 10px;">Fazer login</button></a>
    </div>
